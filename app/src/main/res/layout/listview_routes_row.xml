<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/routeNameScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <TextView
            android:id="@+id/routeRowSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/noRecentRouteText"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/routeRowStepsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/dailyStepsText"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/routeRowMiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/noRecentRouteText"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/routeRowMilesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/dailyMilesText"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/routeRowTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/noRecentRouteText"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/routeRowDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/detailsRouteStartDateText"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/routeRowDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/noRecentRouteText"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <TextView
            android:id="@+id/routeRowStartingPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="TextView"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <TextView
            android:id="@+id/FlatVsHilly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="TextView"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/LoopVsOutBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="TextView"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/StreetVSTrail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="TextView"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/EvenVsUnEven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="TextView"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="TextView"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>